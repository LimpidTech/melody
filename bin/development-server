#!/usr/bin/env zsh

python3 -m venv ../shared
source ../shared/bin/activate

pip install -U setuptools

restart_server() {
  python setup.py develop
  python -m melody migrate
  python -m melody runserver 0.0.0.0:8000 &
  python_pid=$?
}

restart_server

watch_files=("$0" setup.* bin/*-server melody/**/migrations/*.py melody/settings/compose.py)
while inotifywait -e close_write $watch_files; do
  sleep 5
  restart_server
done
